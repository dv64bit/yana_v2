<% include ./partials/header.ejs %>

    <div class="flex items-center min-h-screen bg-white dark:bg-gray-900 overflow-y-scroll">
        <div class="container mx-auto">
            <div class="max-w-md mx-auto my-10">
                <div class="text-center">
                    <h1 class="my-3 text-3xl font-semibold text-gray-700 dark:text-gray-200">Sign in</h1>
                    <p class="text-gray-500 dark:text-gray-400">Sign in to access your account</p>
                </div>
                <% if (error) { %>
                    <p class="error text-sm font-normal text-center">
                        <%= error %>
                    </p>
                    <% } %>
                        <div class="m-7">
                            <form action="/login" method="post">
                                <div class="mb-6">
                                    <label class="block mb-2 text-sm text-gray-600 dark:text-gray-400">Username</label>
                                    <input type="text" name="username" id="email" placeholder="@abc.123"
                                        class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                                </div>
                                <div class="mb-6">
                                    <div class="flex justify-between mb-2">
                                        <label class="text-sm text-gray-600 dark:text-gray-400">Password</label>
                                        <a href="#!"
                                            class="text-sm text-gray-400 focus:outline-none focus:text-indigo-500 hover:text-indigo-500 dark:hover:text-indigo-300">Forgot
                                            password?</a>
                                    </div>
                                    <input type="password" name="password" id="password" placeholder="Your Password"
                                        class="w-full px-3 py-2 placeholder-gray-300 border border-gray-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-gray-700 dark:text-white dark:placeholder-gray-500 dark:border-gray-600 dark:focus:ring-gray-900 dark:focus:border-gray-500" />
                                </div>
                                <div class="mb-6">
                                    <input type="submit"
                                        class="w-full px-3 py-4 text-white cursor-pointer bg-yanalight hover:bg-yanadark rounded-md focus:bg-yanavdark focus:outline-none"
                                        value="Sign In">
                                </div>
                                <p class="text-sm text-center text-gray-400">Don&#x27;t have an account yet? <a
                                        href="/register"
                                        class="text-yanalight focus:outline-none focus:underline focus:text-yanadark dark:focus:border-yanaedark">Sign
                                        up</a>.</p>
                            </form>
                        </div>
            </div>
        </div>
    </div>


    <!-- Footer Mentions -->
    <div class="fixed bottom-5 w-full text-center text-gray-400">
